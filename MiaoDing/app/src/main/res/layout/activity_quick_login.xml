<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray_ed">

    <ImageView
        android:id="@+id/img_bg_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/img_close_login"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        android:src="@mipmap/icon_cancel_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_wechat_login"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_wechat"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="34.3dp"
                android:layout_gravity="center_vertical"
                android:background="#66FFFFFF"/>

            <ImageView
                android:id="@+id/img_qq_login"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_qq"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="34.3dp"
                android:layout_gravity="center_vertical"
                android:background="#66FFFFFF"/>

            <ImageView
                android:id="@+id/img_sina_login"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_sina"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_phone_login"
            android:layout_width="68dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="29dp"
            android:layout_marginTop="38dp"
            android:src="@mipmap/icon_more_login"/>
    </LinearLayout>
</RelativeLayout>
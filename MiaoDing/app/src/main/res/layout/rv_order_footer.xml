<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actual_pay"
            android:textColor="@color/dark_gray_22"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_order_price_footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/light_gray_3d"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_after_sale_footer"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:background="@drawable/text_white_2dp"
            android:gravity="center"
            android:textColor="@color/dark_gray_22"
            android:textSize="11.5sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_order_control_footer"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/text_white_2dp"
            android:gravity="center"
            android:textColor="@color/dark_gray_22"
            android:textSize="11.5sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_order_pay_footer"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/text_black"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="11.5sp"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>
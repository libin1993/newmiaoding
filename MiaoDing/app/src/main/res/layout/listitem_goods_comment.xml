<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <cn.cloudworkshop.miaoding.view.CircleImageView
            android:id="@+id/img_user_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:civ_border_overlay="true"
            app:civ_border_width="1px"
            app:civ_border_color="@color/light_gray_97"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/img_user_grade"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/light_gray_93"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:textColor="@color/light_gray_3d"
        android:textSize="14sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_evaluate_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_goods_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/light_gray_93"
        android:textSize="12sp"/>

    <View
        android:id="@+id/view_evaluate"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/app_bg"
        android:visibility="gone"/>

</LinearLayout>
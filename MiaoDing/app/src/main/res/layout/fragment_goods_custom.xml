<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@android:color/white"
                android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_custom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        app:tl_indicator_color="#414141"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="38dp"
        app:tl_tab_space_equal="true"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/light_gray_4f"
        app:tl_textUnselectColor="@color/light_gray_7a"
        app:tl_textsize="13sp">
    </com.flyco.tablayout.CommonTabLayout>

    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@mipmap/icon_qrcode"/>

    <cn.cloudworkshop.miaoding.jazzyviewpager.JazzyViewPager
        android:id="@+id/vp_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:overScrollMode="never">
    </cn.cloudworkshop.miaoding.jazzyviewpager.JazzyViewPager>
    <include
        layout="@layout/loading_error"/>


</RelativeLayout>
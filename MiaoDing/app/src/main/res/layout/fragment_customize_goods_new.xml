<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <ImageView
        android:id="@+id/img_select_type"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:scaleType="center"
        android:src="@mipmap/icon_goods_type"/>

    <TextView
        android:id="@+id/tv_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/dark_gray_22"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_code"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@mipmap/icon_qrcode"/>


    <cn.cloudworkshop.miaoding.jazzyviewpager.JazzyViewPager
        android:id="@+id/vp_custom_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:overScrollMode="never">
    </cn.cloudworkshop.miaoding.jazzyviewpager.JazzyViewPager>

    <include
        layout="@layout/loading_error"/>


</RelativeLayout>
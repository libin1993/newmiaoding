<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/text_white_4dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_gift_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/dark_gray_22"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/app_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <cn.cloudworkshop.miaoding.view.CircleImageView
            android:id="@+id/img_gift"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/rights_explain"
            android:textColor="@color/dark_gray_22"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_gift_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/app_bg"/>

    <TextView
        android:id="@+id/tv_receive_gift"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/dark_gray_22"
        android:textSize="16sp"/>

</LinearLayout>
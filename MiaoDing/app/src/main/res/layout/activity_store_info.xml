<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp">

        <ImageView
            android:id="@+id/img_store_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_store_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_store_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_store_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textIsSelectable="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_store_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="156dp"
        android:overScrollMode="never">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_gray_01"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/ll_focus_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="153"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_focus_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_focus_off"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/focus_store"
                android:textColor="@android:color/white"
                android:textSize="13sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_buy_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="222"
            android:gravity="center"
            android:text="@string/buy_product"
            android:textColor="@android:color/white"
            android:background="#680000"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_shop_back"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:scaleType="center"
        android:src="@mipmap/icon_back_white"/>

    <ImageView
        android:id="@+id/img_store_share"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@mipmap/icon_share_goods"
        android:visibility="gone"/>


</RelativeLayout>
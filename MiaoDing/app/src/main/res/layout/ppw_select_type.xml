<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="31dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="31dp"
            android:background="@android:color/white"/>

        <ImageView
            android:id="@+id/img_works_icon"
            android:layout_width="55dp"
            android:layout_height="73dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_works_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@id/img_works_icon"
            android:textColor="@color/dark_gray_22"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_works_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_works_price"
            android:layout_below="@id/tv_works_price"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_gray_93"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/img_cancel_buy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:scaleType="center"
            android:src="@mipmap/icon_close_page"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_e5"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/size"
            android:textColor="@color/dark_gray_22"
            android:textSize="14sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_works_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:overScrollMode="never">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_e5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/color"
            android:textColor="@color/dark_gray_22"
            android:textSize="14sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_works_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:overScrollMode="never">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_e5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_works_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/num"
            android:textColor="@color/dark_gray_22"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_reduce_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:background="@drawable/btn_reduce_count"/>

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:text="1"
            android:textColor="@color/dark_gray_22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_add_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_count"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_buy_works"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/dark_gray_22"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
</LinearLayout>
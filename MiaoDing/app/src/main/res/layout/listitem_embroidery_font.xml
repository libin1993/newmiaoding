<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="110dp"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:layout_marginLeft="22dp"
              android:layout_marginRight="22dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_embroidery_font"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/bound_corner_3d"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/img_current_font"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:src="@mipmap/bg_checked"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_embroidery_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_gray_22"
        android:textSize="14sp"
        android:singleLine="true"/>

</LinearLayout>
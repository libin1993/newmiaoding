<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@android:color/white"
              android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_works_designer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        fresco:roundedCornerRadius="3dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/place_holder_news"
        fresco:placeholderImageScaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_designer_works_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/dark_gray_22"
        android:textSize="14sp"
        android:layout_marginTop="10.3dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/light_gray_f1"
        android:layout_marginTop="10.3dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_designer_works_share"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_news_share"/>

        <ImageView
            android:id="@+id/img_designer_works_collect"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:id="@+id/ll_works_love"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <ImageView
                android:id="@+id/img_designer_works_love"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_works_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/light_gray_a6"
                android:textSize="10sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/icon_news_comment"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/light_gray_a6"
            android:textSize="10sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
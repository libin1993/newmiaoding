<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_shirt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tl_indicator_color="@color/dark_gray_22"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="@color/dark_gray_22"
        app:tl_textUnselectColor="@color/light_gray_3d"
        app:tl_textsize="14sp"
        android:background="@android:color/white">
    </com.flyco.tablayout.SlidingTabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_e5"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_shirt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
    </android.support.v4.view.ViewPager>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray_22"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_homepage_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/place_holder_banner"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="3dp"/>

    <TextView
        android:id="@+id/tv_news_content"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:singleLine="true"
        android:textColor="@color/dark_gray_22"
        android:textSize="13sp"/>

    <View
        android:id="@+id/view_news_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/light_gray_f1"/>


    <LinearLayout
        android:id="@+id/ll_home_news"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_news_share"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_news_share"/>

        <ImageView
            android:id="@+id/img_add_collect"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:id="@+id/ll_news_love"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/img_love_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/light_gray_a6"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_news_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_news_comment"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/light_gray_a6"
                android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray_ed"
                android:orientation="vertical">
    <include
        layout="@layout/widget_header_layout"/>
    <LinearLayout
        android:id="@+id/ll_search_store"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bound_ff_3dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_search"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/et_store_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/input_store_name"
            android:singleLine="true"
            android:textColorHint="@color/light_gray_a6"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="@color/dark_gray_22"/>
        <ImageView
            android:id="@+id/img_cancel_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_cancel_login"
            android:scaleType="fitCenter"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_store_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_search_store">
    </com.github.jdsjlzx.recyclerview.LRecyclerView>

    <include
        layout="@layout/loading_error"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg"
                android:fitsSystemWindows="true">

    <include
        layout="@layout/widget_header_layout"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="49dp"
        android:overScrollMode="never">
    </com.github.jdsjlzx.recyclerview.LRecyclerView>

    <LinearLayout
        android:id="@+id/ll_no_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_address"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="@string/no_address"
            android:textColor="#808080"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/dark_gray_15"
        android:layout_alignParentBottom="true"
        android:text="@string/add_receive_address"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <include
        layout="@layout/loading_error"/>

</RelativeLayout>